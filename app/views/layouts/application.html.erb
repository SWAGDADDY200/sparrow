<!DOCTYPE html>
<html>
  <head>
    <title>Sparrow</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class='bg-secondary text-black'>
    <div>
      <div class='mb-3 text-center'>
      <% if current_user %>
        <%= button_to "Create Post", '/posts/new', method: :get, class: 'btn btn-outline-dark' %>
      <% else %>
      <h1>V TO CREATE A POST YOU MUST BE LOGGED IN OR CREATE AN ACCOUNT V</h1>
      <% end %>
      </div>

          <div class="bg d-flex justify-content-between my-2 text-center shadow-lg p-3 mb-6 text-white text-white bg-black mb-5 p border border-info shadow-lg p-3 mb-5 bg-black rounded">
            <% if current_user %>
              <h1 class=''><%= current_user.name %></h1>

              <% if current_user.image.attached? %>

                <%= image_tag(current_user.image, class: 'img-fluid img-avatar rounded-circle')%>

              <% end %>

              <%= button_to "LOGOUT?", logout_path, method: :delete, class: 'btn btn-outline-danger' %>

              <%= button_to "VIEW PROFILE", user_path(current_user), method: :get, class: 'btn btn-outline-info' %>

              <%= button_to "SETTINGS ", edit_user_path(current_user), method: :get, class: 'btn btn-outline-info' %>


            <% else %>

              <%= button_to 'LOG IN', login_path, method: :get, class: 'btn btn-outline-light' %>
            
              <%= button_to 'JOIN US!!', new_user_path, method: :get, class: 'btn btn-outline-primary' %>
            <% end %>
          </div>

      <div class="container">
        <div class="row">
          <div class="col-12 col-lg-6 offset-lg-3">
            <%= yield %>
          </div>
        </div>
          <%= button_to "HOME", '/', method: :get, class: 'mt-5 mb-9 position-absolute top-600 start-50 translate-middle ' %>
      </div>
    </div>
  </body>
</html>
