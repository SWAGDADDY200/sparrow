<%= form_with(model: post ) do |f| %>

    <%  if post.errors %>
        <div class="alert alert-danger">
            <% post.errors.full_messages.each do |message|%>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>
    
  <div class="form-input">
    <%= f.label :author %>
    <%= f.text_field :author, class: 'form-control', placeholder: "example:Cassandea Rice"%>
  </div>

    <div class="form-input">
    <%= f.label :body %>
    <%= f.rich_text_area :body, class:'form-control' %>
  </div>

  <%= f.submit 'Add Post' %>
<% end %>
<br>
