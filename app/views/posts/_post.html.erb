<div class="mb 5">
 <div class="card-body">
    <h1 class="name">Author:<%= post.author %> </h1>
    <p class="post"><%= post.body %></p>
  </div>
</div>

<% post.image.each do |image| %>
  <%= image_tag image, :size => "500x300" %>
<% end %>

<% if post.body %>
  <%= link_to "Delete Post", post_path(post), "data-turbo-method": :delete %>
  <%= link_to "Edit Post", edit_post_path(post) %>
<% end %>
